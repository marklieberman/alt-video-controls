{

  "manifest_version": 2,
  "name": "Alternative Video Controls",
  "version": "1.0.2",

  "description": "Alternative controls for video elements",

  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": [ "content/controls.js" ],
      "css": [ "content/controls.css" ]
    }
  ],

  "web_accessible_resources": [
    "content/controls.html"
  ],

  "options_ui": {
    "browser_style": true,
    "page": "options/options.html",
    "open_in_tab": false
  }

}
